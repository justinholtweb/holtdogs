{% for component in components %}
    {% switch component.type %}
        {% case "hero" %}
            {% include "components/_partials/_heroMatrix" with component %}
        {% case "menuCollection" %}
            {% include "components/_partials/_menu-overview" with component %}
        {% case "menuItem" %}
            {% include "components/_partials/_menu-item" with component %}
        {% case "menuPopular" %}
            {% include "components/_partials/_menu-popular" with component %}
        {% case "menuSpecials" %}
            {% include "components/_partials/_menu-specials" with component %}
        {% case "menuCategory" %}
            {% include "components/_partials/_menu-category" with component %}
        {% case "bodyText" %}
            {% include "components/_partials/_body-text" with component %}
   {% endswitch %}
    
{% endfor %}